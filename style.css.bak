@import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@500;700&display=swap');

body, html { margin: 0; overflow: hidden; font-family: 'Fredoka', sans-serif; background: #87CEEB; }

/* 动态云层动画 */
.cloud-bg {
    position: absolute; width: 200%; height: 100%;
    background: url('https://raw.githubusercontent.com/dylanm199009/assets/main/clouds.png') repeat-x; 
    /* 如果没有图片，用渐变代替 */
    background: linear-gradient(to bottom, #87CEEB 0%, #E0F7FA 100%);
    z-index: 0;
}

#start-screen {
    position: fixed; inset: 0; z-index: 100;
    background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(10px);
    display: flex; flex-direction: column; align-items: center; justify-content: center;
}

.title { font-size: 60px; color: #ff6b6b; margin-bottom: 10px; text-shadow: 2px 2px white; }
.subtitle { font-size: 20px; color: #555; margin-bottom: 30px; }
button {
    padding: 15px 60px; font-size: 24px; background: #ff6b6b; color: white;
    border: none; border-radius: 50px; cursor: pointer;
    box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
    transition: transform 0.2s;
}
button:hover { transform: scale(1.1); }

#hud { position: absolute; inset: 0; z-index: 20; pointer-events: none; }
.score-pill {
    position: absolute; top: 20px; left: 20px;
    background: white; padding: 10px 25px; border-radius: 30px;
    font-size: 24px; color: #ffae00; font-weight: bold;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

/* 学习卡片：玻璃拟态 + 弹跳动画 */
#learning-card {
    position: absolute; inset: 0;
    display: flex; align-items: center; justify-content: center;
    background: rgba(0,0,0,0.4);
    opacity: 0; pointer-events: none; transition: opacity 0.3s;
}
#learning-card.visible { opacity: 1; pointer-events: auto; }

.card-content {
    background: white; width: 300px; padding: 30px; border-radius: 40px;
    text-align: center; transform: scale(0.8); transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 8px solid #E0F7FA;
}
#learning-card.visible .card-content { transform: scale(1); }

#card-icon { font-size: 100px; filter: drop-shadow(0 10px 20px rgba(0,0,0,0.2)); }
#card-en { font-size: 48px; color: #333; margin: 10px 0 0; }
#card-cn { font-size: 28px; color: #00BCD4; margin: 5px 0; } /* 解决乱码的关键在于字体和编码 */
#card-pron { font-size: 18px; color: #999; }

#webcam {
    position: absolute; bottom: 20px; right: 20px; width: 160px;
    border-radius: 20px; border: 4px solid white; transform: scaleX(-1);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}