@import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@400;600&display=swap');

body, html { margin: 0; overflow: hidden; font-family: 'Fredoka', sans-serif; background: #87CEEB; touch-action: none; }

#sky-gradient { position: absolute; inset: 0; z-index: -2; background: linear-gradient(180deg, #89f7fe 0%, #66a6ff 100%); }

#lobby-screen {
    position: fixed; inset: 0; z-index: 100;
    background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px);
    display: flex; flex-direction: column; align-items: center; justify-content: center;
}
.logo-area h1 { color: #0984e3; font-size: 40px; margin: 0; text-shadow: 2px 2px white; }

.tree-container { margin: 20px 0; text-align: center; }
#magic-tree { font-size: 80px; animation: grow 2s infinite alternate; }
@keyframes grow { from { transform: scale(1); } to { transform: scale(1.1); } }

.level-scroller {
    display: flex; flex-wrap: wrap; justify-content: center; gap: 15px; padding: 10px;
    max-width: 800px; max-height: 50vh; overflow-y: auto;
}
.level-scroller button {
    width: 90px; height: 110px; border: none; border-radius: 20px;
    background: white; border-bottom: 5px solid var(--theme);
    font-size: 16px; font-weight: bold; color: #555; cursor: pointer;
    box-shadow: 0 5px 10px rgba(0,0,0,0.1);
}
.level-scroller button:active { transform: scale(0.95); }

#system-log { position: absolute; bottom: 20px; color: #888; font-size: 12px; }

#game-ui { position: absolute; inset: 0; pointer-events: none; z-index: 10; display: none; }
.hud-header { display: flex; justify-content: space-between; padding: 20px; }
.score-badge { font-size: 28px; color: #fdcb6e; font-weight: 900; text-shadow: 2px 2px 0 #d63031; }
.quit-btn { pointer-events: auto; padding: 8px 15px; background: #ff7675; color: white; border: none; border-radius: 10px; }

#study-modal {
    position: absolute; inset: 0; background: rgba(0,0,0,0.6);
    display: flex; align-items: center; justify-content: center;
    opacity: 0; pointer-events: none; transition: opacity 0.3s;
}
#study-modal.active { opacity: 1; pointer-events: auto; }
.modal-card {
    background: white; width: 280px; padding: 20px; border-radius: 30px; text-align: center;
    border: 6px solid #a29bfe; transform: scale(0.8); transition: transform 0.4s;
}
#study-modal.active .modal-card { transform: scale(1); }
#card-icon { font-size: 80px; }
#card-en { font-size: 36px; margin: 5px 0; color: #333; }
#card-cn { font-size: 24px; color: #0984e3; margin-bottom: 15px; }

#btn-mic { 
    width: 60px; height: 60px; border-radius: 50%; border: none; 
    background: #00cec9; font-size: 30px; color: white; cursor: pointer;
    box-shadow: 0 5px 0 #00b894; animation: pulse 1.5s infinite;
}
#btn-skip { margin-top: 10px; background: none; border: none; color: #999; text-decoration: underline; cursor: pointer; }

/* 视频必须可见但移出屏幕 */
#input-video { position: absolute; top: -9999px; left: -9999px; width: 640px; height: 480px; }
#radar-canvas { position: absolute; bottom: 10px; right: 10px; background: rgba(0,0,0,0.5); border-radius: 10px; transform: scaleX(-1); }

.float-text { position: absolute; font-weight: bold; pointer-events: none; animation: floatUp 1s forwards; text-shadow: 2px 2px 0 #000; }
@keyframes floatUp { from { transform: translateY(0) scale(1); opacity: 1; } to { transform: translateY(-80px) scale(1.5); opacity: 0; } }
@keyframes pulse { 0% { transform: scale(1); } 50% { transform: scale(1.1); } 100% { transform: scale(1); } }