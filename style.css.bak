@import url('https://fonts.googleapis.com/css2?family=Fredoka:wght@500;700&display=swap');

body, html { margin: 0; overflow: hidden; font-family: 'Fredoka', sans-serif; background: #2c3e50; }

/* 动态背景 */
#star-bg {
    position: absolute; inset: 0; z-index: -2;
    background: radial-gradient(circle at center, #34495e 0%, #2c3e50 100%);
}

/* 大厅样式 */
#lobby {
    position: fixed; inset: 0; z-index: 100;
    display: flex; flex-direction: column; align-items: center; justify-content: center;
    background: rgba(255,255,255,0.9); backdrop-filter: blur(15px);
}
.title-area { text-align: center; margin-bottom: 40px; }
.title-area h1 { font-size: 60px; color: #6c5ce7; margin: 0; text-shadow: 4px 4px 0 #a29bfe; }

.level-container { display: flex; gap: 20px; }
.card-btn {
    width: 180px; height: 220px; border: none; border-radius: 30px;
    background: white; cursor: pointer;
    box-shadow: 0 10px 0 var(--theme), 0 20px 30px rgba(0,0,0,0.15);
    border: 4px solid var(--theme);
    transition: transform 0.2s;
}
.card-btn:hover { transform: translateY(-10px); }
.card-btn:active { transform: translateY(5px); box-shadow: 0 0 0 var(--theme); }
.icon { font-size: 80px; margin-bottom: 20px; }
.label { font-size: 24px; color: #555; font-weight: bold; }

/* 游戏 HUD */
#game-ui { position: absolute; inset: 0; pointer-events: none; z-index: 10; display: none; }
.header { display: flex; justify-content: space-between; padding: 30px; }
.score-badge { font-size: 40px; color: #ffeaa7; font-weight: 900; text-shadow: 2px 2px 0 #d63031; }

.back-btn { pointer-events: auto; padding: 10px 20px; border-radius: 20px; border: none; background: #ff7675; color: white; cursor: pointer; font-weight: bold; }

/* 学习卡片动画 */
#study-card {
    position: absolute; inset: 0; display: flex; align-items: center; justify-content: center;
    background: rgba(0,0,0,0.5); opacity: 0; transition: opacity 0.3s;
}
#study-card.active { opacity: 1; }
.card-inner {
    width: 350px; padding: 40px; background: white; border-radius: 50px;
    text-align: center; transform: scale(0); border: 10px solid #74b9ff;
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}
#study-card.active .card-inner { transform: scale(1); }
#card-icon { font-size: 120px; filter: drop-shadow(0 10px 10px rgba(0,0,0,0.2)); }
#card-en { font-size: 60px; margin: 10px 0; color: #2d3436; }
#card-cn { font-size: 30px; color: #0984e3; }

/* 浮动文字特效 */
.float-text {
    position: absolute; font-size: 40px; font-weight: bold; color: #fdcb6e;
    text-shadow: 2px 2px 0 #000; pointer-events: none;
    animation: floatUp 1s forwards;
}
@keyframes floatUp {
    0% { transform: translateY(0) scale(1); opacity: 1; }
    100% { transform: translateY(-100px) scale(1.5); opacity: 0; }
}

/* 摄像头调试 */
#cam-debug {
    position: absolute; bottom: 20px; right: 20px; width: 160px;
    border: 4px solid white; border-radius: 20px; opacity: 0.8; transform: scaleX(-1);
    z-index: 5;
}

/* 屏幕震动类 (JS添加) */
.shake { animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both; }
@keyframes shake {
  10%, 90% { transform: translate3d(-4px, 0, 0); }
  20%, 80% { transform: translate3d(6px, 0, 0); }
  30%, 50%, 70% { transform: translate3d(-8px, 0, 0); }
  40%, 60% { transform: translate3d(8px, 0, 0); }
}